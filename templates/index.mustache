<div>

    <!-- Suchfeld & Filter -->
    <div>
        <input type="text" id="searchInput" placeholder="Suche...">
        <select id="filterSelect">
            <option value="">Alle anzeigen</option>
            <option value="Offen">Offen</option>
            <option value="In Bearbeitung">In Bearbeitung</option>
            <option value="Abgeschlossen">Abgeschlossen</option>
        </select>
    </div>

    <!-- Tabelle -->
    <table id="learningPlanTable">
        <thead>
        <tr>
            <th data-column="coursename" class="sortable">Kurs</th>
            <th data-column="sectionname" class="sortable">Abschnitt</th>
            <th data-column="addeddate" class="sortable">Hinzugef√ºgt</th>
            <th data-column="processing_deadline" class="sortable">Bearbeiten bis</th>
            <th data-column="progress" class="sortable">Bearbeitungsstand</th>
            <th>Entfernen</th>
        </tr>
        </thead>
        <tbody>
        {{#sections}}
            <tr class="learningplan-section" data-sectionid="{{sectionid}}" data-progress="{{progress}}">
                <td><a href="{{courseurl}}" target="_blank">{{coursename}}</a></td>
                <td><a href="{{sectionurl}}" target="_blank">{{sectionname}}</a></td>
                <td data-value="{{addedtimestamp}}">{{addeddate}}</td>
                <td>
                    <input type="date" class="datepicker"
                           data-courseid="{{courseid}}"
                           data-sectionid="{{sectionid}}"
                           data-userid="{{userid}}"
                           value="{{#processing_deadline}}{{processing_deadline}}{{/processing_deadline}}">
                </td>
                <td>
                    <select class="progress-dropdown"
                            data-courseid="{{courseid}}"
                            data-sectionid="{{sectionid}}"
                            data-userid="{{userid}}">
                        <option value="offen" {{#progress_offen}}selected{{/progress_offen}}>Offen</option>
                        <option value="in_bearbeitung" {{#progress_in_bearbeitung}}selected{{/progress_in_bearbeitung}}>In Bearbeitung</option>
                        <option value="abgeschlossen" {{#progress_abgeschlossen}}selected{{/progress_abgeschlossen}}>Abgeschlossen</option>
                    </select>
                </td>
                <td>
                    <button class="btn btn-danger btn-sm remove-section-btn" data-courseid="{{courseid}}" data-sectionid="{{sectionid}}" data-userid="{{userid}}">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            </tr>
        {{/sections}}
        {{^sections}}
            <tr>
                <td colspan="6" class="text-center">Du hast noch keine gespeicherten Lernbereiche.</td>
            </tr>
        {{/sections}}
        </tbody>
    </table>

</div>
